{
  "routes": [
    {
      "route": "/assets/*.js",
      "headers": {
        "Content-Type": "text/javascript"
      }
    },
    {
      "route": "*.js",
      "headers": {
        "Content-Type": "text/javascript"
      }
    },
    {
      "route": "/assets/*.mjs",
      "headers": {
        "Content-Type": "text/javascript"
      }
    },
    {
      "route": "*.mjs",
      "headers": {
        "Content-Type": "text/javascript"
      }
    },
    {
      "route": "/assets/*.css",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "*.{css,js,mjs,json,woff,woff2,eot,ttf,otf,png,jpg,jpeg,gif,svg,ico}"]
  },
  "mimeTypes": {
    ".js": "text/javascript",
    ".mjs": "text/javascript",
    ".css": "text/css",
    ".json": "application/json"
  }
}
